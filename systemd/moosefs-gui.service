[Unit]
Description=MooseFS GUI Server
Wants=network-online.target
After=network.target network-online.target

[Service]
Type=forking
ExecStart=/usr/sbin/mfsgui start
ExecStop=/usr/sbin/mfsgui stop
ExecReload=/usr/sbin/mfsgui reload
PIDFile=/var/lib/mfs/.mfsgui.lock
Restart=on-abnormal

[Install]
WantedBy=multi-user.target

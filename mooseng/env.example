# MooseNG Docker Demo Environment Configuration
# Copy this file to .env and adjust values as needed

# General Configuration
LOG_LEVEL=info
DEBUG=false

# Network Configuration
NETWORK_SUBNET=172.20.0.0/24

# Master Server Ports
MASTER1_CLIENT_PORT=9421
MASTER1_RAFT_PORT=9422
MASTER1_METRICS_PORT=9423

MASTER2_CLIENT_PORT=9431
MASTER2_RAFT_PORT=9432
MASTER2_METRICS_PORT=9433

MASTER3_CLIENT_PORT=9441
MASTER3_RAFT_PORT=9442
MASTER3_METRICS_PORT=9443

# Chunkserver Configuration
CHUNKSERVER_REPLICAS=3
CHUNKSERVER_DISK_COUNT=4

# Chunkserver Ports
CHUNKSERVER1_BIND_PORT=9420
CHUNKSERVER1_METRICS_PORT=9425

CHUNKSERVER2_BIND_PORT=9450
CHUNKSERVER2_METRICS_PORT=9455

CHUNKSERVER3_BIND_PORT=9460
CHUNKSERVER3_METRICS_PORT=9465

# Client Configuration
CLIENT_CACHE_SIZE=1G
CLIENT_MOUNT_POINT=/mnt/mooseng

# Client Ports
CLIENT1_METRICS_PORT=9427
CLIENT2_METRICS_PORT=9437
CLIENT3_METRICS_PORT=9447

# Monitoring Configuration
PROMETHEUS_VERSION=v2.47.0
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=7d

GRAFANA_VERSION=10.1.0
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

DASHBOARD_PORT=8080

# Resource Limits
MASTER_CPU_LIMIT=2
MASTER_MEMORY_LIMIT=2G

CHUNKSERVER_CPU_LIMIT=4
CHUNKSERVER_MEMORY_LIMIT=4G

CLIENT_CPU_LIMIT=2
CLIENT_MEMORY_LIMIT=2G

# Build Configuration
PARALLEL_BUILD=true
FORCE_REBUILD=false

# Docker Compose Project Name
COMPOSE_PROJECT_NAME=mooseng